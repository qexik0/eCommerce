@model EditItemViewModel

<h2>Edit item</h2>
<div>
    <form method="post">
        <h3><span class="text-danger">@TempData["ItemEditError"]</span></h3>
        <div class="form-group">
            <label asp-for="Item.Name"></label>
            <input asp-for="Item.Name" class="form-control" value="@Model.Item.Name" />
        </div>
        <div class="form-group">
            <label asp-for="Item.CategoryId"></label>
            <select asp-for="Item.CategoryId" class="form-control">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Item.Description"></label>
            <textarea asp-for="Item.Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Item.Price"></label>
            <input asp-for="Item.Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Item.Seller"></label>
            <input asp-for="Item.Seller" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Item.ImageLink"></label>
            <input asp-for="Item.ImageLink" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Item.Size"></label>
            <input asp-for="Item.Size" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Item.Color"></label>
            <input asp-for="Item.Color" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Item.Spec"></label>
            <input asp-for="Item.Spec" class="form-control" />
        </div>
        <input type="hidden" asp-for="ItemId" value="@Model.ItemId" />
        <button type="submit" asp-action="EditItem" asp-controller="ItemManagement">Save</button>
    </form>
</div>